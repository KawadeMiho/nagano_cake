<p class="h3 ml-4">ジャンル一覧・追加</p>
<%= form_with model: @genre,url:admin_genres_path do |f| %>
<table class= "table table-borderless ml-4 col-4">
<tbody>
 <tr>
  <td>ジャンル名</td>
  <td><%= f.text_field :name %></td>
  <td><%= f.submit "新規登録",class: "btn btn-sm btn-success" %></td>
 </tr>
</tbody>
</table>
  <% end %>
</div>
<div class= "col-4">
<table class= "table table-sm ml-4">
 <tbody>
  <tr class="table-active">
   <td>ジャンル</td>
   <td><% @genres.each do |genre| %>
  <tr>
    <td><%= genre.name %></td>
    <td><%= link_to "編集する", edit_admin_genre_path(genre),class: "btn btn-sm btn-success" %></td>
  </tr>
  <% end %>
 </tbody>
</table>
</div>
<h1>商品一覧</h1>

<table class="table">
  <thead>
    <tr>
     <th>商品ID</th>
     <th>商品名</th>
     <th>税抜価格</th>
     <th>ジャンル</th>
     <th>ステータス</th>
    </tr>
  </thead>
    <tr>
  <% @items.each do |item| %>
     <td><%= item.id %></td>
     <td><%= link_to item.name, admin_item_path(item) %></td>
     <td><%= item.price %></td>
     <td><%= item.genre.name %></td>
     <td><% if item.is_active? %>
      <span style= "color:green"><b>販売中</span></b>
     <% else %>
      <span style= "color:gray"><b>販売停止中</span></b>
     <% end %>
    </td>
  </tr>
  <% end %>
</table>

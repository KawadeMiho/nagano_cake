<p class="h3 ml-5">商品詳細</p>
<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-4">
       <%= image_tag @item.get_image(200,200) %>
    </div>

    <div class="col-md-8">
       <table class= "table table-borderless">
         <tbody>
           <tr>
             <td>商品名</td>
             <td><%= @item.name %></td>
            </tr>
           <tr>
             <td>商品説明</td>
             <td><%= @item.introduction %></td>
           </tr>
　        <tr>
　           <td>ジャンル名</td>
　           <td><%= @item.genre.name %></td>
　         </tr>
　         <tr>
　           <td>税込価格(税抜価格)</td>
　           <td><%= (@item.price* 1.1).floor %>(<%= @item.price %>)円</td>
　         </tr>
　         <tr>
　           <td>販売ステータス</td>
　             <td><% if @item.is_active? %>
              <span style= "color:green"><b>販売中</span></b>
               <% else %>
              <span style= "color:grar"><b>販売停止中</span></b>
              </td>
           </tr>
               <% end %>
        </table>
    </div>
  <%= link_to "編集する",edit_admin_item_path(@item),class: "btn btn-sm btn-success" %>

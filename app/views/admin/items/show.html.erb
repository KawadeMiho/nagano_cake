<h1>商品詳細</h1>
    <%= image_tag @item.get_item_image(100,100) %>
　</div>
    <div class="box-text">
     <div class="form-group">
     <label for="inputImage">商品名</label>
     <%= @item.name %>
     </div>
     <div class="form-group">
     <label for="inputIntroduction">商品説明</label>
     <%= @item.introduction %>
     </div>
    <div class="form-group">
    <label for="inputGenre_name">ジャンル名</label>
    <%= @item.genre.name %>
    </div>
    <div class="form-group">
    <label for="inputPrice">税込価格(税抜価格)</label>
     <%= @item.price %>円
    </div>
    <div class="form-group">
     <% if @item.is_active? %>
     <span style= "color:green"><b>販売中</span></b>
     <% else %>
     <span style= "color:grar"><b>販売停止中</span></b>
     <% end %>
     </div>
</div>
  <%= link_to "編集する",edit_admin_item_path(@item),class: "btn btn-sm btn-success" %>

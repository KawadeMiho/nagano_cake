<h2>会員情報編集</h2>

<table class="table table-borderless">
  <thead>
    <tr>
     <th>会員ID</th>
     <th><%= @customer.id %></th>
    </tr>
  </thead>
</table>
<table class="table">
  <%= form_with model: @customer,url: admin_customer_path(@customer) do |f| %>
  <div class="form-group">
    <label for="inputName">氏名</label>
    <%= f.text_field :last_name %>
    <%= f.text_field :first_name %>
  </div>
  <div class="form-group">
    <label for="inputKana">フリガナ</label>
    <%= f.text_field :last_name_kana %>
    <%= f.text_field :first_name_kana %>
  </div>
  <div class= "form-group">
    <label for="inputPostal_Code">郵便番号</label>
    <%= f.text_field :postal_code %>
  </div>
  <div class= "form-group">
    <label for="inputAddress">住所</label>
    <%= f.text_field :address %>
  </div>
  <div class= "form-group">
    <label for="inputTelephone_Number">電話番号</label>
    <%= f.text_field :telephone_number %>
  </div>
  <div class= "form-group">
   <label for="inputEmail">メールアドレス</label>
    <%= f.text_field :email %>
  </div>
  <div class= "form-group">
   <label for="inputIs_Deleted">会員ステータス</label>
     <%=f.radio_button :is_deleted, false %>
     <%= f.label :is_deleted, "有効" %>
  　　 <%= f.radio_button:is_deleted,true %>
     <%= f.label :is_deleted, "退会" %>
  </div>
  <% end %>
</table>



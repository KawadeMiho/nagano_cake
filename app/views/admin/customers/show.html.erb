<h2>会員詳細</h2>

<table class="table table-borderless">
    <tr>
      <th>会員ID</th>
      <th><%= @customer.id %></th>
    </tr>
    <tr>
      <th>氏名</th>
      <th><%= @customer.full_name %></th>
    </tr>
    <tr>
      <th>フリガナ</th>
      <th><%= @customer.last_name_kana + @customer.first_name_kana %></th>
    </tr>
    <tr>
      <th>郵便番号</th>
      <th><%= @customer.postal_code %></th>
    </tr>
    <tr>
      <th>住所</th>
　　　<th><%= @customer.address %></th>
　　</tr>
　　<tr>
      <th>電話番号</th>
      <th><%= @customer.telephone_number %></th>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <th><%= @customer.email %></th>
    </tr>
    <tr>
      <th>会員ステータス</th>
      <th> <% if @customer.is_deleted == false %>
      <span style= "color:green"><b>有効</span></b>
      <% else %>
      <span style= "color:gray"><b><span>退会</span></b></th>
    </tr>
      <% end %>
</table>
<table class="table table-borderless">
  <tr>
    <th><%= link_to  "編集する" ,edit_admin_customer_path(@customer),class: "btn btn-sm btn-success ml-5" %></th>
    <th><%= link_to  "注文履歴一覧を見る",admin_path, class: "btn btn-primary" %></th>
  </tr>
</table>


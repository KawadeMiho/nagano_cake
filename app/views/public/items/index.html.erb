<h1>商品一覧(全8件)</h1>

<% @items.each do |item| %>

<%= link_to item.name,item_path(item.id) %>
<%= link_to item_path(item.id) do%>
<% if item.image.attached? %>
<%= image_tag item.image,size: "200x200" %>
<% else %>
<%= image_tag 'no_image', size: "200x200" %>
<% end %>
<% end %>
<p><%= item.price %></p>

<% end %>

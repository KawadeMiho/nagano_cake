<p class="h3 ml-5">配送先登録/一覧</p>

<%= form_with model: @address,url: addresses_path,method: :post do |f| %>
<table class="table table-borderless ml-4">
  <tbody>
    <tr>
      <td>郵便番号(ハイフンなし)</td>
      <td><%= f.text_field :postal_code %></td>
    </tr>
    <tr>
      <td>住所</td>
      <td><%= f.text_field :address %></td>
    </tr>
    <tr>
      <td>宛名</td>
      <td><%= f.text_field :name %></td>
      <td><%= f.submit "新規登録",class: "btn btn-sm btn-success" %></td>
    </tr>
  </tbody>
</table>
<% end %>

<div class="container">
 <div class="row justify-content-md-center">
  <div class="col-md-8">
<table class="table table-bordered">
  <thead class= "thead-light">
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @addresses.each do |address| %>
    <tr>
      <td><%= address.postal_code %></td>
      <td><%= address.address %></td>
      <td><%= address.name %></td>
      <td><%= link_to "編集する", edit_address_path(address),class: "btn btn-sm btn-success" %>
          <%= link_to "削除する", address_path(address),method: :delete, class: "btn btn-danger" %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
</div>
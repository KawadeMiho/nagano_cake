<p class="h3 ml-5">注文履歴詳細</p>

<p class="h4 ml-5">注文情報</p>
<div class="container">
  <div class="col-md-6">
<table class="table  table-bordered">
  <thead>
    <tr>
      <td>注文日</td>
      <td><%= @order.created_at.strftime("%Y/%m/%d") %></td>
    </tr>
    <tr>
      <td>配送先</td>
      <td>〒<%= @order.postal_code %>
          <%= @order.address %>
          <%= @order.name %>
      </td>
    </tr>
    <tr>
      <td>支払方法</td>
      <td><%= @order.payment_method_i18n %></td>
    </tr>
    <tr>
      <td>ステータス</td>
      <td><%= @order.status_i18n %></td>
    </tr>
  </thead>
 </table>
 </div>
 </div>

<p class="h4 ml-5">請求情報</h2>
  <div class="container">
  <div class="col-md-4">
<table class="table  table-bordered">
  <thead>
    <tr>
      <td>商品合計</td>
      <td><%= @order.total_payment- @order.shipping_cost %></td>
    </tr>
    <tr>
      <td>配送料</td>
      <td><%= @order.shipping_cost %></td>
    </tr>
    <tr>
      <td>ご請求額</td>
      <td><%= @order.total_payment- @order.shipping_cost+ @order.shipping_cost %></td>
    </tr>
  </thead>
 </table>
  </div>
  </div>

<p class="h4 ml-5">注文内容</p>
<div class="container">
  <div class="col-md-6">
<table class="table  table-bordered">
  <thead>
    <tr>
      <th>商品</th>
      <th>単価(税込)</th>
      <th>個数</th>
      <th>小計</th>
    </tr>
  </thead>
  <tbody>
    <% total= 0 %>
    <tr>
      <% @order_details.each do |order_detail| %>
      <td><%= order_detail.item.name %></td>
      <td><%= order_detail.purchas_price %></td>
      <td><%= order_detail.amount %></td>
      <td><%= order_detail.amount*order_detail.purchas_price %></td>
      <% end %>
    </tr>
  </tbody>
 </table>
 </div>
 </div>

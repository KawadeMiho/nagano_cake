<h1>注文履歴詳細</h1>

<h2>注文情報</h2>

<table>
  <thead>
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>支払方法</th>
      <th>ステータス</th>
    </tr>
  </thead>
 <tbody>
    <tr>
      <td><%= @order.created_at.strftime("%Y/%m/%d") %></td>
      <td><%= @order.postal_code %>
          <%= @order.address %>
          <%= @order.name %></td>
      <td><%= @order.payment_method_i18n %></td>
      <td><%= @order.status_i18n %></td>
    </tr>
 </tbody>
</table>

<h2>請求情報</h2>
<table>
  <thead>
    <tr>
      <th>商品合計</th>
      <th>配送料</th>
      <th>ご請求額</th>
    </tr>
  </thead>
 <tbody>
   <tr>
     <td><%= @order.total_payment %></td>
     <td><%= @order.shipping_cost %></td>
     <td><%= @order.total_payment += @order.shipping_cost %></td>
   </tr>
 </tbody>
</table>

<h2>注文内容</h2>
<table>
  <thead>
    <tr>
      <th>商品</th>
      <th>単価(税込)</th>
      <th>個数</th>
      <th>小計</th>
    </tr>
  </thead>
 <tbody>
    <tr>
      <% @order_details.each do |order_detail| %>
      <td><%= order_detail.item.name %></td>
      <td><%= order_detail.purchas_price %></td>
      <td><%= order_detail.amount %></td>
      <td><%= order_detail.amount*order_detail.purchas_price %></td>
      <% end %>
    </tr>
 </tbody>
</table>

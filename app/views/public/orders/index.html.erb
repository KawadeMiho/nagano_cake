<h1>注文履歴一覧</h1>

<table>
  <thead>
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>ステータス</th>
      <th>注文詳細</th>
    </tr>
  </thead>
<tbody>
  <% total = 0 %>
    <tr>
      <% @orders.each do |order| %>
      <td><%= order.created_at.strftime("%Y/%m/%d") %></td>
      <td><%= order.postal_code %><%= order.address %><%= order.name %></td>
      <td><%= order.total_payment+= order.shipping_cost %></td>
      <td><%= order.status %></td>
      <td><%= link_to "表示する",order_path(order.id) %></td>
      <% end %>
    </tr>
 </tbody>
</table>


<h1>ショッピングカート</h1>
<%=link_to "カートを空にする",destroy_all_path,method: :delete %>
<table>
 <thead>
   <th>商品名</th>
   <th>単価(税込)</th>
   <th>数量</th>
   <th>小計</th>
   <th></th>
 </thead>
 <tbody>
   <% total = 0 %>
　<% @cart_items.each do |cart_item| %>
　<tr>
　  <td><%= cart_item.item.name %></td>
    <td><%= cart_item.item.with_tax_price %></td>
    <td><%= form_with(model: cart_item,url: cart_item_path(cart_item.id), method: :patch,local: true) do |f| %>
    <%= cart_item.amount %>
    <%= f.select :amount, *[1..10] %></td>
    <td><%= f.submit "変更" %></td>
    <% end %>
    <td><%= cart_item.subtotal %></td>
    <td><%= link_to "削除する",cart_item_path(cart_item.id),method: :delete %></td>
    </tr>
    <% @total_payment +=(cart_item.item.price * 1.1).floor * cart_item.amount %>
   <% end %>
   <%= link_to "買い物を続ける",items_path %>
  </tbody>
</table>
  <table>
   <thead>
   <th>合計金額</th>
   <th></th>
   </thead>
  <tbody>
   <tr>
    <td><%= @total_payment %></td>
   </tr>
  </tbody>
</table>

<%= link_to "情報入力に進む",new_order_path %>